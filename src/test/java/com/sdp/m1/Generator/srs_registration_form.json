{
  "features": [
    {
      "feature": "Service Provider Registration",
      "featureDescription": "Allows an operations user to register a new Service Provider in the system.",
      "requirements": [
        {
          "label": "Service Provider ID",
          "type": "String",
          "validations": [
            {
              "rule": "mandatory",
              "errorMessage": "Service provider Id required"
            },
            {
              "rule": "unique",
              "errorMessage": "Service Provider Id already exists"
            },
            {
              "rule": "length",
              "max": 8,
              "errorMessage": "Please enter 8 digit number for Service Provider Id."
            }
          ]
        },
        {
          "label": "Company name",
          "type": "String",
          "validations": [
            {
              "rule": "mandatory",
              "errorMessage": "Company Name required"
            },
            {
              "rule": "length",
              "max": 50,
              "errorMessage": "Company Name should be less than 50 characters"
            },
            {
              "rule": "unique",
              "errorMessage": "Service Provider with the entered company name already exists"
            }
          ]
        },
        {
          "label": "Address",
          "type": "String",
          "validations": [
            {
              "rule": "optional"
            },
            {
              "rule": "length",
              "max": 255,
              "errorMessage": "Address should be less than 255 characters"
            }
          ]
        },
        {
          "label": "Description",
          "type": "String",
          "validations": [
            {
              "rule": "optional"
            },
            {
              "rule": "length",
              "max": 255,
              "errorMessage": "Description should be less than 255 characters"
            }
          ]
        },
        {
          "label": "White Listed Users",
          "type": "String",
          "validations": [
            {
              "rule": "mandatory"
            },
            {
              "rule": "length",
              "min": 8,
              "max": 15,
              "errorMessage": "Should be comma-separated phone numbers having 15 digits as maximum and 8 digits as minimum"
            },
            {
              "rule": "no_duplicate",
              "errorMessage": "Msisdn are Duplicate in White listed Msisdn."
            },
            {
              "rule": "no_blacklisted_duplicate",
              "errorMessage": "You can not have a White-listed user in the Blacklisted user list."
            }
          ]
        },
        {
          "label": "Black Listed Users",
          "type": "String",
          "validations": [
            {
              "rule": "optional"
            },
            {
              "rule": "length",
              "min": 8,
              "max": 15,
              "errorMessage": "Should be comma-separated phone numbers having 15 digits as maximum and 8 digits as minimum"
            },
            {
              "rule": "no_duplicate",
              "errorMessage": "Msisdn are Duplicate in Black listed Msisdn."
            }
          ]
        },
        {
          "label": "Dedicated Alias",
          "type": "String",
          "validations": [
            {
              "rule": "optional"
            },
            {
              "rule": "unique",
              "errorMessage": "Dedicated alias/es - [Alias Name] or a wildcard format is already in use"
            },
            {
              "rule": "valid_regex",
              "errorMessage": "Invalid regular expression/s for Dedicated Alias please enter valid regular expression."
            }
          ]
        },
        {
          "label": "SP users",
          "type": "multi-select list box",
          "validations": [
            {
              "rule": "mandatory",
              "errorMessage": "Select atleast one User Name."
            }
          ]
        },
        {
          "label": "Marketing Users",
          "type": "multi-select list box",
          "validations": [
            {
              "rule": "mandatory",
              "errorMessage": "Allowed Marketing Users required."
            }
          ]
        },
        {
          "label": "Resources",
          "type": "multi-select list box",
          "validations": [
            {
              "rule": "mandatory",
              "errorMessage": "Select atleast one resource."
            }
          ]
        }
      ]
    },
    {
      "feature": "SLA Configuration for SMS",
      "featureDescription": "Allows the operations user to define the Service Level Agreement for SMS, including maximum messages per second and per day for both Mobile Originated (MO) and Mobile Terminated (MT) messages.",
      "requirements": [
        {
          "label": "Maximum Messages Per Second",
          "type": "text",
          "ncs": "SMS MO",
          "validations": [
            {
              "rule": "mandatory",
              "errorMessage": "Maximum messages per second required."
            },
            {
              "rule": "numeric",
              "errorMessage": "Please enter a valid input."
            },
            {
              "rule": "length",
              "max": 1000,
              "errorMessage": "Max message per second should not be greater than 1000 message per second."
            }
          ]
        },
        {
          "label": "Maximum Messages Per Day",
          "type": "text",
          "ncs": "SMS MO",
          "validations": [
            {
              "rule": "mandatory",
              "errorMessage": "Maximum messages per day required."
            },
            {
              "rule": "numeric",
              "errorMessage": "Please enter a valid input."
            },
            {
              "rule": "length",
              "max": 50000000,
              "errorMessage": "Max message per day should not be greater than 50000000 message per day."
            },
            {
              "rule": "comparison",
              "comparison_with": "Maximum Messages Per Second",
              "errorMessage": "Max message per day should be greater than message per Second."
            }
          ]
        },
        {
          "label": "NCS Description",
          "type": "text",
          "ncs": "SMS MO",
          "validations": [
            {
              "rule": "optional"
            },
            {
              "rule": "length",
              "max": 255,
              "errorMessage": "NCS Description is too long."
            }
          ]
        },
        {
          "label": "Maximum recipients Per Second",
          "type": "text",
          "ncs": "SMS MT",
          "validations": [
            {
              "rule": "mandatory",
              "errorMessage": "Maximum messages per second required."
            },
            {
              "rule": "numeric",
              "errorMessage": "Please enter a valid input."
            },
            {
              "rule": "length",
